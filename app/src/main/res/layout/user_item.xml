<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/user_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginBottom="5dp"
            android:text="Placeholder1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/user_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/user_item1"
            android:text="Placeholder2"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/user_item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_below="@+id/user_item2"
            android:text="Placeholder3"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/user_item4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Placeholder4"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>